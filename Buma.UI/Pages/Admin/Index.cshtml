@page
@model Buma.UI.Pages.Admin.IndexModel
@{
}


<div id="app">
    <div>
        <p v-for="(product, index) in products">
            {{product.id}} - {{product.name}} - {{product.descriptiom}} - {{product.value}}
            <a @@click="editProduct(product.id, index)">Edit Product</a>
            <a @@click="deleteProduct(product.id, index)">Delete Product</a>
        </p>
    </div>
    <div>
        <input v-model="productModel.name" />
        <input v-model="productModel.description" />
        <input v-model="productModel.value" />
        <button @@click="createProduct" class="" v-if="!productModel.id">Create Product</button>
        <button @@click="updateProduct" class="" v-else="">Update Product</button>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/Admin/main.js"></script>
}