@page
@model Buma.UI.Pages.Checkout.CustomerInfoModel
@{
    ViewData["Title"] = "CustomerInfo";
}

    <div>
        <form method="post">
            <input asp-for="CustomerInformation.FirstName" />
            <span asp-validation-for="CustomerInformation.FirstName"></span>
            <input asp-for="CustomerInformation.LastName" />
            <span asp-validation-for="CustomerInformation.LastName"></span>
            <input asp-for="CustomerInformation.PhoneNumber" />
            <span asp-validation-for="CustomerInformation.PhoneNumber"></span>
            <input asp-for="CustomerInformation.Email" />
            <span asp-validation-for="CustomerInformation.Email"></span>
            <input asp-for="CustomerInformation.Address1" />
            <span asp-validation-for="CustomerInformation.Address1"></span>
            <input asp-for="CustomerInformation.Address2" />
            <input asp-for="CustomerInformation.City" />
            <span asp-validation-for="CustomerInformation.City"></span>
            <input asp-for="CustomerInformation.PostCode" />
            <span asp-validation-for="CustomerInformation.PostCode"></span>

            <button type="submit">Submit</button>
        </form>
    </div>

