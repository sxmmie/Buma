@page "{name}"
@model Buma.UI.Pages.ProductModel
@{
}

    <div>
        <p>@Model.Product.Name</p>
        <p>@Model.Product.Description</p>
        <p>@Model.Product.Value</p>
        <div>
            <label>Stock</label>
            <select>
                @foreach (var s in Model.Product.Stock)
                {
                    <option value="@s.Id"></option>
                }
            </select>
        </div>
    </div>